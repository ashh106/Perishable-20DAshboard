# Walmart Smart Perishables Dashboard - Environment Configuration

# OpenAI Configuration (for GenAI features)
OPENAI_API_KEY=your_openai_api_key_here

# JWT Secret for authentication
JWT_SECRET=walmart-perishables-secret-key-change-in-production

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (SQLite is used by default)
DATABASE_URL=./walmart_perishables.db

# Optional: External API integrations
# ERP_API_URL=https://walmart-erp-system.com/api
# COPIA_API_KEY=your_copia_api_key
# WEATHER_API_KEY=your_weather_api_key

# Optional: Real-time features
# WEBSOCKET_ENABLED=true
# REDIS_URL=redis://localhost:6379

# Optional: Monitoring and logging
# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=info

# Demo Configuration
DEMO_MODE=true
MOCK_AI_RESPONSES=true
