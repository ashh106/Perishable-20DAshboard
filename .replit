modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Full-Stack App"

[[workflows.workflow.tasks]]
task = "workflow.preview"
args = "http://localhost:8080"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow]]
name = "Start Full-Stack App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm run dev"
waitForPort = 8080

[deployment]
run = ["sh", "-c", "npm install && npm run build && npm start"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8080
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 3001
externalPort = 3001
exposeLocalhost = true
